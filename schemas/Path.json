{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://raw.githubusercontent.com/marhei/TrainCompany-Data/main/schemas/Path.json",
	"title": "Verbindungen zwischen zwei Bahnhöfen",
	"type": "object",
	"properties": {
		"data": {
			"type": "array",
			"items": {
				"allOf": [
					{"$ref": "#/$defs/path"},
					{
						"anyOf": [
							{
								"required": ["start"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["start"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					},
					{
						"anyOf": [
							{
								"required": ["end"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["end"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					},
					{
						"anyOf": [
							{
								"required": ["twistingFactor"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["twistingFactor"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					},
					{
						"anyOf": [
							{
								"required": ["length"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["length"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					},
					{
						"anyOf": [
							{
								"required": ["maxSpeed"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["maxSpeed"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					}
				]
			},
			"uniqueItems": true
		}
	},
	"$defs": {
		"path": {
			"type": "object",
			"properties": {
				"name": {
					"description": "Streckenname",
					"type": "string"
				},
				"group": {
					"description": "Art der Strecke",
					"type": "integer",
					"oneOf": [
						{"const": 0, "description": "Hauptbahn"},
						{"const": 1, "description": "Nebenbahn"},
						{"const": 2, "description": "SFS"}
					],
					"default": 0
				},
				"start": {
					"description": "Ril100 des Startbahnhofs",
					"type": "string",
					"minLength": 2,
					"maxLength": 5
				},
				"end": {
					"description": "Ril100 des Endbahnhofs",
					"type": "string",
					"minLength": 2,
					"maxLength": 5
				},
				"twistingFactor": {
					"description": "Kurvigkeit. 1 ist am kurvigsten",
					"type": "number",
					"minimum": 0,
					"maximum": 0.8
				},
				"length": {
					"description": "Länge der Strecke",
					"type": "integer",
					"minimum": 1,
					"maximum": 150
				},
				"maxSpeed": {
					"description": "Höchstgeschwindigkeit des Streckenabschnitts",
					"type": "integer",
					"minimum": 10,
					"maximum": 320
				},
				"electrified": {
					"description": "Elektrifiziert",
					"type": "boolean",
					"default": true
				},
				"neededEquipments": {
					"description": "Benötigte Fahrzeugausstattung",
					"type": "array",
					"items": {
						"type": "string",
						"examples": [
							"ETCS",
							"KRM",
							"FR"
						]
					}
				},
				"objects": {
					"description": "Sub-Routen, die ihre nicht definierten Eigenschaften von der darüberliegenden Ebene erben.",
					"type": "array",
					"items": {
						"$ref": "#/$defs/path"
					}
				}
			}
		}
	}
}