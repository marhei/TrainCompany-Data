{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://raw.githubusercontent.com/marhei/TrainCompany-Data/main/schemas/Capacity.json",
	"title": "Art der Beladungen eines Fahrzeugs",
	"type": "object",
	"properties": {
		"data": {
			"type": "array",
			"items": {
				"allOf": [
					{"$ref": "#/$defs/capacity"},
					{
						"anyOf": [
							{
								"required": ["idString"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["idString"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					},
					{
						"anyOf": [
							{
								"required": ["name"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["name"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					},
					{
						"anyOf": [
							{
								"required": ["needsPlatform"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["needsPlatform"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					},
					{
						"anyOf": [
							{
								"required": ["unit"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["unit"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					},
					{
						"anyOf": [
							{
								"required": ["unitMass"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["unitMass"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					},
					{
						"anyOf": [
							{
								"required": ["emoji"]
							},
							{
								"properties": {
									"objects": {
										"items": {
											"required": ["emoji"]
										}
									}
								},
								"required": ["objects"]
							}
						]
					}
				]
			},
			"uniqueItems": true
		}
	},
	"$defs": {
		"capacity": {
			"type": "object",
			"properties": {
				"idString": {
					"description": "Eindeutige ID einer Capacity",
					"type": "string",
					"minimum": 0
				},
				"name": {
					"description": "Name der Capacity",
					"type": "string"
				},
				"needsPlatform": {
					"description": "Benötigt einen bahnsteig?",
					"type": "boolean"
				},
				"unit": {
					"description": "Einheit der Capacity",
					"type": "string"
				},
				"unitMass": {
					"description": "Masse einer Einheit in t",
					"type": "number",
					"minimum": 0
				},
				"emoji": {
					"description": "Emoji der Einheit",
					"type": "string"
				},
				"exchangeFactor": {
					"description": "Faktor für automatischen Zustieg: 1 ist normale Fahrgäste",
					"type": "number",
					"minimum": 0,
					"maximum": 5
				},
				"objects": {
					"description": "Sub-Ladungsarten, die ihre nicht definierten Eigenschaften von der darüberliegenden Ebene erben.",
					"type": "array",
					"items": {
						"$ref": "#/$defs/capacity"
					}
				}
			}
		}
	}
}